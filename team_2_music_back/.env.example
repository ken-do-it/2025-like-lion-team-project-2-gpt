# --- 개발 기본값 (참고용) ---
# MUSIC_DATABASE_URL=sqlite:///./app.db
# MUSIC_CORS_ORIGINS=["http://localhost:5173","http://127.0.0.1:5173"]
# MUSIC_ALLOW_HEADER_AUTH=true

# --- 운영용으로 직접 값 채우기 ---
# DB: Postgres 등 실 서비스 DB 사용
MUSIC_DATABASE_URL=postgres://user:pass@host:5432/dbname

# 비밀키: 충분히 긴 랜덤 문자열로 교체
MUSIC_SECRET_KEY=change-me-please

# 인증(JWKS) 사용 시 설정, 아니면 비워두기
MUSIC_JWKS_URL=
MUSIC_JWKS_AUDIENCE=

# CORS: 실제 배포 도메인(프론트)만 허용, 와일드카드 금지
MUSIC_CORS_ORIGINS=["https://your-frontend-domain","http://localhost:5173"]

# S3 전환 시 버킷/만료 설정
MUSIC_S3_BUCKET=your-bucket-name
MUSIC_PRESIGN_EXPIRATION=900

# 임시 헤더 인증 금지(운영)
MUSIC_ALLOW_HEADER_AUTH=false

# 로컬 저장 경로(볼륨 마운트)
MUSIC_LOCAL_STORAGE_PATH=storage
